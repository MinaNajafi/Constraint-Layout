<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_sun"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent=".1"
        android:src="@drawable/ic_sun"
        />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintCircleRadius="130dp"
        app:layout_constraintCircle="@id/iv_sun"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_mercury"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent=".1"
        android:src="@drawable/ic_mercury"
        />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintCircleRadius="130dp"
        app:layout_constraintCircle="@id/iv_sun"
        app:layout_constraintCircleAngle="225"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_jupiter"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent=".1"
        android:src="@drawable/ic_jupiter"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintCircleRadius="130dp"
        app:layout_constraintCircle="@id/iv_sun"
        app:layout_constraintCircleAngle="315"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_earth"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent=".1"
        android:src="@drawable/ic_earth"
        />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintCircleRadius="130dp"
        app:layout_constraintCircle="@id/iv_sun"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_mars"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent=".1"
        android:src="@drawable/ic_mars"
        />



</androidx.constraintlayout.widget.ConstraintLayout>