<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/blackBox"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/bluebox"
        android:src="@android:color/holo_blue_bright"
        app:layout_constraintBottom_toBottomOf="@id/blackBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/blackBox" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="140dp"
        android:src="@android:color/holo_green_dark"
        app:layout_constraintTop_toBottomOf="@id/blackBox"
        app:layout_constraintLeft_toRightOf="@id/blackBox"
        app:layout_constraintRight_toRightOf="parent"
        />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@color/pink"
        app:layout_constraintStart_toEndOf="@id/bluebox"
        app:layout_constraintEnd_toStartOf="@id/blackBox"
        app:layout_constraintTop_toBottomOf="@id/blackBox"
        />



</androidx.constraintlayout.widget.ConstraintLayout>